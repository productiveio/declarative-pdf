{
  "name": "declarative-pdf",
  "version": "1.0.2",
  "description": "A tool for generating PDF documents from declarative HTML templates",
  "keywords": [
    "pdf",
    "html",
    "declarative",
    "template",
    "document",
    "generate",
    "generate-pdf",
    "generate-pdf-from-html"
  ],
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.wrapper.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "author": "The Productive Company",
  "contributors": [
    "Tibor Rogulja"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/productiveio/declarative-pdf.git"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "create": "npm run build && npm run test",
    "build": "rm -rf dist && tsup src/index.ts --format cjs,esm --dts --clean && cp shims/index.wrapper.cjs dist/",
    "lint": "eslint --ext .js,.ts .",
    "test": "node ./bin/check-canvas.cjs && jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "compare-pdf": "1.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "puppeteer": "^22.8.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1"
  }
}
