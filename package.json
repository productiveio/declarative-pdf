{
  "name": "declarativepdf",
  "version": "0.0.12",
  "description": "A tool for generating PDF documents from declarative HTML templates",
  "main": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.wrapper.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "author": "productiveio",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "create": "npm run build && npm run test",
    "build": "rm -rf dist && tsup src/index.ts --format cjs,esm --dts --clean && cp shims/index.wrapper.cjs dist/",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "compare-pdf": "^1.1.8",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "jsdom": "^22.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "puppeteer": "^19.2.2"
  }
}
