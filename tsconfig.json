{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "dist", "tests", "manual_tests"]
}
